<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane
        alignment="center"
        hgap="10"
        prefHeight="200.0"
        prefWidth="360.0"
        vgap="10"
        xmlns="http://javafx.com/javafx/10.0.2-internal"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="sample.Controller">

    <columnConstraints>
        <ColumnConstraints maxWidth="60.0" minWidth="60.0" prefWidth="60.0" />
        <ColumnConstraints maxWidth="120.0" minWidth="120.0" prefWidth="120.0" />
        <ColumnConstraints maxWidth="60.0" minWidth="60.0" prefWidth="60.0"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>

    <children>
        <Label
                fx:id="LabelRes"
                prefHeight="17.0"
                prefWidth="151.0"
                GridPane.columnIndex="2"
                GridPane.rowIndex="3" />
        <Label
                fx:id="LabelResult"
                prefHeight="17.0"
                prefWidth="151.0"
                GridPane.columnIndex="0"
                GridPane.rowIndex="3" />
        <TextField
                fx:id="tf1"
                prefHeight="25.0"
                prefWidth="83.0"
                promptText="tf1"
                text="1"
                GridPane.columnIndex="0"
                GridPane.rowIndex="1" />
        <TextField
                fx:id="tf2"
                promptText="tf2"
                text="2"
                GridPane.columnIndex="2"
                GridPane.rowIndex="1" />
        <Button
                fx:id="btnGo"
                mnemonicParsing="false"
                onAction="#onActionBtnGo"
                prefHeight="25.0"
                prefWidth="93.0"
                text=" = "
                GridPane.columnIndex="1"
                GridPane.rowIndex="3" />
        <FlowPane
                prefHeight="17.0"
                prefWidth="149.0"
                GridPane.columnIndex="1"
                GridPane.rowIndex="1">
            <children>
                <Button
                        fx:id="btnMinus"
                        focusTraversable="false"
                        mnemonicParsing="false"
                        onAction="#onActionBtnMinus"
                        prefWidth="30.0"
                        text="-" />
                <Button
                        fx:id="btnPlus"
                        focusTraversable="false"
                        mnemonicParsing="false"
                        onAction="#onActionBtnPlus"
                        prefWidth="30.0"
                        text="+" />
                <Button
                        fx:id="btnMultiply"
                        focusTraversable="false"
                        mnemonicParsing="false"
                        onAction="#onActionBtnMultiply"
                        prefWidth="30.0"
                        text="x" />
                <Button
                        fx:id="btnDevide"
                        focusTraversable="false"
                        mnemonicParsing="false"
                        onAction="#onActionBtnDevide"
                        prefWidth="30.0"
                        text="/" />
            </children>
        </FlowPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</GridPane>